<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Main_consumer</title>
    <link rel="stylesheet" href="/consumer/Category.css" />
  </head>
  <body>
    <div class="container">
      <% if (session == true ){%>
        <header data-include="/Header_login.html">
        </header>
        <%} else {%>
          <header data-include="/Header.html">
          </header>
        <%} %>

      <div id="main_body">
        <!-- 이벤트 창 -->
        <div>
          <div id="arrow-left" class="arrow"></div>
          <ul class="slides">
            <input type="radio" name="radio-btn" id="img-1" checked />
            <li class="slide-container">
              <div class="slide">
                <img src="/img&font/img/배너_1.png" />
              </div>
              <div class="nav">
                <label for="img-6" class="prev">&#x2039;</label>
                <label for="img-2" class="next">&#x203a;</label>
              </div>
            </li>

            <input type="radio" name="radio-btn" id="img-2" />
            <li class="slide-container">
              <div class="slide">
                <img src="/img&font/img/배너_2.png" />
              </div>
              <div class="nav">
                <label for="img-1" class="prev">&#x2039;</label>
                <label for="img-3" class="next">&#x203a;</label>
              </div>
            </li>

            <input type="radio" name="radio-btn" id="img-3" />
            <li class="slide-container">
              <div class="slide">
                <img src="/img&font/img/배너_3.png" />
              </div>
              <div class="nav">
                <label for="img-2" class="prev">&#x2039;</label>
                <label for="img-4" class="next">&#x203a;</label>
              </div>
            </li>

            <input type="radio" name="radio-btn" id="img-4" />
            <li class="slide-container">
              <div class="slide">
                <img src="/img&font/img/배너_4.png" />
              </div>
              <div class="nav">
                <label for="img-3" class="prev">&#x2039;</label>
                <label for="img-5" class="next">&#x203a;</label>
              </div>
            </li>

            <input type="radio" name="radio-btn" id="img-5" />
            <li class="slide-container">
              <div class="slide">
                <img src="/img&font/img/배너_5.jpg" />
              </div>
              <div class="nav">
                <label for="img-4" class="prev">&#x2039;</label>
                <label for="img-6" class="next">&#x203a;</label>
              </div>
            </li>

            <input type="radio" name="radio-btn" id="img-6" />
            <li class="slide-container">
              <div class="slide">
                <img src="/img&font/img/배너_6.png" />
              </div>
              <div class="nav">
                <label for="img-5" class="prev">&#x2039;</label>
                <label for="img-1" class="next">&#x203a;</label>
              </div>
            </li>

            <li class="nav-dots">
              <label for="img-1" class="nav-dot" id="img-dot-1"></label>
              <label for="img-2" class="nav-dot" id="img-dot-2"></label>
              <label for="img-3" class="nav-dot" id="img-dot-3"></label>
              <label for="img-4" class="nav-dot" id="img-dot-4"></label>
              <label for="img-5" class="nav-dot" id="img-dot-5"></label>
              <label for="img-6" class="nav-dot" id="img-dot-6"></label>
            </li>
          </ul>
        </div>
        <!-- item -->
        <div id="item_list">
          <div>
            <ul>
              <li class="listsort">오래된순</li>
              <li class="listsort">최신순</li>
            </ul>
          </div>
          <hr />
          <div id="wapper">
            <% for(var i=0; i<rows.length; i++) { 
                var data = rows[i];
              %>
            <div class="item">
              <div>
                <img src="public<%= data.image%>" class="itemimg" />
              </div>
              <div>
                <h3><%= data.title%>></h3>
                <p><span id="hidden"><%= data.content%></span></p>
                <div class="progress">
                  <div class="progress-done" data-done="80"><span>80%</span></div>
                </div>
              </div>
            </div>
            <% } %> 
          </div>
        </div>
      </div>

      <hr />
      <footer data-include="/Footer.html" class="footer">
      </footer>
    </div>
    <script type="text/javascript" src="/jquery-3.6.0.js"></script>
    <script src="/consumer/Main.js"></script>
    <script src="/H_F.js"></script>

  </body>
</html>
